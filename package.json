{
  "name": "neardevhub-widgets",
  "version": "1.0.0",
  "type": "module",
  "description": "NEAR DevHub widgets for NEAR Social",
  "devDependencies": {
    "@playwright/test": "^1.38.1",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "@types/styled-components": "^5.1.30",
    "fb-watchman": "^2.0.2",
    "http-server": "^14.1.1",
    "near-bos-webcomponent": "^0.0.2",
    "near-social-vm-types": "^1.0.0",
    "prettier": "^2.8.4",
    "replace-in-files": "^3.0.0",
    "simple-git-hooks": "^2.9.0",
    "sucrase": "^3.34.0"
  },
  "scripts": {
    "fmt": "prettier --write '**/*.{js,jsx,ts,tsx,json}'",
    "fmt:check": "prettier --check '**/*.{js,jsx,ts,tsx,json}'",
    "build": "npm run fmt && npm run copy:jsx && npm run transpile && npm run replace && node ./scripts/build.js",
    "copy:jsx": "mkdir -p build/src && cp -r ./src ./build",
    "transpile": "sucrase ./src -d ./build/src --transforms typescript,jsx --jsx-runtime preserve --disable-es-transforms --out-extension jsx",
    "dev": "npm run dev:mainnet",
    "dev:mainnet": "./scripts/dev.sh -a devhub.near",
    "dev:testnet": "./scripts/dev.sh -a devhub.testnet",
    "replace": "node ./scripts/replace.js -a devhub.near -c devgovgigs.near -n mainnet",
    "gateway": "node scripts/dev-gateway.mjs",
    "test": "npx playwright test",
    "watch:native": "watchman watch ./src && watchman -- trigger ./src build '**/*' -- npm run build",
    "watch": "node scripts/watch.js",
    "clear:watch": "watchman watch-del-all; watchman shutdown-server"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run fmt"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/near/neardevhub-widgets.git"
  },
  "author": "Near Inc <hello@nearprotocol.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/near/neardevhub-widgets/issues"
  },
  "homepage": "https://github.com/near/neardevhub-widgets#readme"
}
